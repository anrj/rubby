{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rubby-test",
  "version": "0.0.0",
  "identifier": "com.ktnms.rubby",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Rubby Duck",
        "width": 200,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true,
        "center": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
